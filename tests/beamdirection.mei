<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="https://music-encoding.org/schema/dev/mei-CMN.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<?xml-model href="https://music-encoding.org/schema/dev/mei-CMN.rng" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<mei xmlns="http://www.music-encoding.org/ns/mei" meiversion="5.0.0-dev">
  <meiHead>
    <fileDesc>
      <titleStmt>
        <title>Test for beam place attribute</title>
      </titleStmt>
      <pubStmt>
        <respStmt>
          <persName>Klaus Rettinghaus</persName>
        </respStmt>
      </pubStmt>
      <seriesStmt>
        <title>MEILER test files</title>
      </seriesStmt>
    </fileDesc>
  </meiHead>
  <music>
    <body>
      <mdiv>
        <score>
          <scoreDef meter.count="4" meter.unit="4" meter.sym="common">
            <staffGrp>
              <staffDef n="1" clef.line="2" clef.shape="G" lines="5"/>
            </staffGrp>
          </scoreDef>
          <section>
            <measure n="1">
              <staff n="1">
                <layer n="1">
                  <beam label="standard beam">
                    <note pname="d" oct="4" dur="8"/>
                    <note pname="d" oct="5" dur="8"/>
                    <note pname="d" oct="4" dur="8"/>
                    <note pname="d" oct="5" dur="8"/>
                  </beam>
                  <note pname="d" oct="4" dur="8" xml:id="n-a"/>
                  <note pname="d" oct="5" dur="8"/>
                  <note pname="d" oct="4" dur="8"/>
                  <note pname="d" oct="5" dur="8" xml:id="n-b"/>
                </layer>
              </staff>
              <beamSpan place="mixed" startid="#n-a" endid="#n-b"/>
            </measure>
            <measure n="2">
              <staff n="1">
                <layer n="1">
                  <beam place="below">
                    <note pname="d" oct="4" dur="8"/>
                    <note pname="d" oct="5" dur="8"/>
                    <note pname="d" oct="4" dur="8"/>
                    <note pname="d" oct="5" dur="8"/>
                  </beam>
                  <beam place="above">
                    <note pname="d" oct="4" dur="8"/>
                    <note pname="d" oct="5" dur="8"/>
                    <note pname="d" oct="4" dur="8"/>
                    <note pname="d" oct="5" dur="8"/>
                  </beam>
                </layer>
              </staff>
            </measure>
            <measure n="3">
              <staff n="1">
                <layer n="1">
                  <beam place="mixed">
                    <note pname="d" oct="4" dur="8"/>
                    <note pname="d" oct="5" dur="8"/>
                    <note pname="d" oct="4" dur="8"/>
                    <note pname="d" oct="5" dur="8"/>
                  </beam>
                  <note pname="d" oct="4" dur="8" xml:id="n-c"/>
                  <note pname="d" oct="5" dur="8"/>
                  <note pname="d" oct="4" dur="8"/>
                  <note pname="d" oct="5" dur="8" xml:id="n-d"/>
                </layer>
              </staff>
              <beamSpan place="below" startid="#n-c" endid="#n-d"/>
            </measure>
          </section>
        </score>
      </mdiv>
    </body>
  </music>
</mei>
